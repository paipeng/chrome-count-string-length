{
  "name": "Count String Length",
  "version": "0.1",
  "manifest_version": 2,
  "description": "calculate selected text's length (strlen)",
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["bg.js"]
  },
  "permissions": [
    "<all_urls>",
    "contextMenus"
  ],
  "browser_action": {
    "default_title": "中文简繁字体转换",
    "default_icon": "icon_128.png",
    "default_popup": "popup.html"
  }
}
